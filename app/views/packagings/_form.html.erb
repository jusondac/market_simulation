<%= form_with(model: packaging, local: true, class: "space-y-6") do |form| %>
  <% if packaging.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded relative">
      <strong class="font-bold">Ada <%= pluralize(packaging.errors.count, "error") %>:</strong>
      <ul class="mt-2 list-disc list-inside">
        <% packaging.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="bg-white shadow-md rounded-lg p-6">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <%= form.label :name, "Nama Packaging", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500", placeholder: "Contoh: Botol Plastik" %>
      </div>
      <div>
        <%= form.label :size, "Ukuran", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :size, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500", placeholder: "Contoh: 500ml, 250g, dll" %>
      </div>
      <div>
        <%= form.label :box, "Box/Kemasan", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :box, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500", placeholder: "Contoh: Kardus, Kantong, dll" %>
      </div>
      <div>
        <%= form.label :capacity, "Kapasitas (unit)", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.number_field :capacity, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500", placeholder: "Contoh: 500, 250", min: 1 %>
      </div>
      <div>
        <%= form.label :price, "Harga (Rp)", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.number_field :price, step: 0.01, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500", placeholder: "Contoh: 2500" %>
      </div>
      <div>
        <%= form.label :material, "Material", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.select :material, options_for_select([
          ['Plastik', 'plastik'],
          ['Kertas', 'kertas'],
          ['Aluminium', 'aluminium'],
          ['Kaca', 'kaca'],
          ['Karton', 'karton'],
          ['Logam', 'logam'],
          ['Bio Degradable', 'bio_degradable']
        ], packaging.material), { prompt: 'Pilih Material' }, { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" } %>
      </div>
    </div>
    <div class="mt-6 flex justify-end space-x-4">
      <%= link_to "Batal", packagings_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
      <%= form.submit packaging.persisted? ? "Update Packaging" : "Simpan Packaging", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>
<% end %>
