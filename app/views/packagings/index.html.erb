<div class="px-4 sm:px-0">
  <div class="flex items-center justify-between mb-6">
    <div>
      <h1 class="text-3xl font-bold text-gray-100">Kemasan</h1>
      <p class="text-gray-400 mt-2">Kelola jenis kemasan untuk produk Anda</p>
    </div>
    <div class="flex space-x-2">
      <%= link_to "Tambah Kemasan Baru", new_packaging_path, class: button_classes %>
    </div>
  </div>
  <% if @packagings.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @packagings.each do |packaging| %>
        <div class="<%= card_classes %> hover:shadow-md transition-shadow group">
          <div class="flex items-start justify-between mb-4">
            <h3 class="text-lg font-semibold text-gray-100 group-hover:text-indigo-400">
              <%= link_to packaging.name, packaging_path(packaging) %>
            </h3>
            <div class="flex space-x-1">
              <%= link_to edit_packaging_path(packaging), class: "text-gray-400 hover:text-indigo-400" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
              <% end %>
            </div>
          </div>
          <div class="mb-4">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-700 text-purple-300">
              <%= packaging.material.humanize %>
            </span>
          </div>
          <div class="space-y-2 mb-4">
            <div class="flex justify-between text-sm">
              <span class="text-gray-400">Ukuran:</span>
              <span class="font-medium text-gray-100"><%= packaging.size %></span>
            </div>
            <div class="flex justify-between text-sm">
              <span class="text-gray-400">Box/Kemasan:</span>
              <span class="font-medium text-gray-100"><%= packaging.box %></span>
            </div>
            <div class="flex justify-between text-sm">
              <span class="text-gray-400">Kapasitas:</span>
              <span class="font-medium text-gray-100"><%= packaging.capacity %> unit</span>
            </div>
            <div class="flex justify-between text-sm">
              <span class="text-gray-400">Harga:</span>
              <span class="font-medium text-green-400"><%= format_rupiah(packaging.price) %></span>
            </div>
          </div>
          <div class="pt-4 border-t border-gray-700">
            <div class="flex space-x-2">
              <%= link_to "Lihat Detail", packaging_path(packaging), class: button_classes(:outline, :small) %>
              <%= link_to "Hapus", packaging_path(packaging), method: :delete, 
                  data: { 
                    confirm: "Apakah Anda yakin ingin menghapus kemasan #{packaging.name}?",
                    turbo_method: :delete 
                  }, 
                  class: button_classes(:danger, :small) %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="<%= card_classes %>">
      <div class="text-center py-12">
        <div class="text-6xl mb-4">ðŸ“¦</div>
        <h3 class="text-lg font-medium text-gray-100 mb-2">Belum ada kemasan</h3>
        <p class="text-gray-400 mb-6">Tambahkan jenis kemasan untuk melengkapi sistem packaging produk Anda.</p>
        <%= link_to "Tambah Kemasan Pertama", new_packaging_path, class: button_classes %>
      </div>
    </div>
  <% end %>
</div>
