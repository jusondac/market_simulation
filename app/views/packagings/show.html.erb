<% content_for :title, @packaging.name %>
<div class="max-w-4xl mx-auto">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900"><%= @packaging.name %></h1>
    <div class="space-x-2">
      <%= link_to "Edit", edit_packaging_path(@packaging), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to "Kembali", packagings_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>
  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <div class="p-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <label class="block text-sm font-medium text-gray-500 mb-1">Nama</label>
          <p class="text-lg text-gray-900"><%= @packaging.name %></p>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-500 mb-1">Ukuran</label>
          <p class="text-lg text-gray-900"><%= @packaging.size %></p>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-500 mb-1">Box/Kemasan</label>
          <p class="text-lg text-gray-900"><%= @packaging.box %></p>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-500 mb-1">Kapasitas</label>
          <p class="text-lg text-gray-900"><%= @packaging.capacity %> unit</p>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-500 mb-1">Harga</label>
          <p class="text-lg text-gray-900">Rp <%= number_with_delimiter(@packaging.price) %></p>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-500 mb-1">Material</label>
          <p class="text-lg text-gray-900">
            <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
              <%= @packaging.material.humanize %>
            </span>
          </p>
        </div>
      </div>
    </div>
  </div>
  <% if @packaging.products.any? %>
    <div class="mt-8">
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Produk yang Menggunakan Packaging Ini</h2>
      <div class="bg-white shadow-md rounded-lg overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Produk</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Harga per Package</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @packaging.product_packagings.includes(:product).each do |product_packaging| %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap">
                  <%= link_to product_packaging.product.name, product_path(product_packaging.product), class: "text-blue-600 hover:text-blue-800" %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-gray-900">
                  Rp <%= number_with_delimiter(product_packaging.price_per_package) %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>
</div>
