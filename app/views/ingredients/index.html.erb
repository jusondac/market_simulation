<div class="px-4 sm:px-0">
  <div class="flex items-center justify-between mb-6">
    <div>
      <h1 class="text-3xl font-bold text-gray-100">Ingredients</h1>
      <p class="text-gray-400 mt-2">Manage your ingredient inventory and pricing</p>
    </div>
    <%= link_to "Add New Ingredient", new_ingredient_path, class: button_classes %>
  </div>
  <div class="<%= card_classes %>">
    <% if @ingredients.any? %>
      <div class="space-y-1">
        <% @ingredients.each_with_index do |ingredient, index| %>
          <div class="group hover:bg-gray-750 rounded-lg transition-colors duration-150">
            <div class="flex items-center justify-between py-4 px-4">
              <div class="flex items-center space-x-4 flex-1">
                <div class="flex-shrink-0">
                  <div class="w-10 h-10 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-lg flex items-center justify-center">
                    <span class="text-white font-medium text-sm">
                      <%= ingredient.name.first.upcase %>
                    </span>
                  </div>
                </div>
                <div class="flex-1 min-w-0">
                  <div class="flex items-center space-x-3">
                    <h3 class="text-sm font-semibold text-gray-100 truncate">
                      <%= ingredient.name %>
                    </h3>
                    <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-gray-700 text-gray-300">
                      <%= ingredient.unit %>
                    </span>
                  </div>
                  <% if ingredient.description.present? %>
                    <p class="text-sm text-gray-400 truncate mt-1">
                      <%= ingredient.description %>
                    </p>
                  <% end %>
                </div>
                <div class="text-right">
                  <div class="text-lg font-bold text-gray-100">
                    $<%= number_with_precision(ingredient.price, precision: 2) %>
                  </div>
                  <div class="text-xs text-gray-400">per <%= ingredient.unit %></div>
                </div>
              </div>
              <div class="flex items-center space-x-2 ml-4 opacity-0 group-hover:opacity-100 transition-opacity duration-150">
                <%= link_to ingredient_path(ingredient), 
                    class: "p-2 text-gray-400 hover:text-indigo-400 hover:bg-gray-700 rounded-lg transition-colors duration-150",
                    title: "View details" do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                  </svg>
                <% end %>
                <%= link_to edit_ingredient_path(ingredient), 
                    class: "p-2 text-gray-400 hover:text-blue-400 hover:bg-gray-700 rounded-lg transition-colors duration-150",
                    title: "Edit ingredient" do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                  </svg>
                <% end %>
                <%= link_to ingredient_path(ingredient), method: :delete, 
                    confirm: "Are you sure you want to delete #{ingredient.name}? This will remove it from all recipes.",
                    class: "p-2 text-gray-400 hover:text-red-400 hover:bg-gray-700 rounded-lg transition-colors duration-150",
                    title: "Delete ingredient" do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                  </svg>
                <% end %>
              </div>
            </div>
            <% unless index == @ingredients.length - 1 %>
              <div class="border-b border-gray-700 mx-4"></div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <div class="text-6xl mb-4">ğŸ¥•</div>
        <h3 class="text-lg font-medium text-gray-100 mb-2">No ingredients yet</h3>
        <p class="text-gray-400 mb-6">Get started by adding your first ingredient to the inventory.</p>
        <%= link_to "Add First Ingredient", new_ingredient_path, class: button_classes %>
      </div>
    <% end %>
  </div>
</div>
