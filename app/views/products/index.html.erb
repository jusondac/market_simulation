<div class="px-4 sm:px-0">
  <div class="flex items-center justify-between mb-6">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Products</h1>
      <p class="text-gray-600 mt-2">Manage your product catalog for market simulation</p>
    </div>
    <%= link_to "Create New Product", new_product_path, class: button_classes %>
  </div>
  <% if @products.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @products.each do |product| %>
        <div class="<%= card_classes %> hover:shadow-md transition-shadow group">
          <div class="flex items-start justify-between mb-4">
            <h3 class="text-lg font-semibold text-gray-900 group-hover:text-indigo-600">
              <%= link_to product.name, product_path(product) %>
            </h3>
            <div class="flex space-x-1">
              <%= link_to edit_product_path(product), class: "text-gray-400 hover:text-indigo-600" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
              <% end %>
            </div>
          </div>
          <div class="mb-4">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
              Based on: <%= product.recipe.name %>
            </span>
          </div>
          <div class="space-y-2 mb-4">
            <div class="flex justify-between text-sm">
              <span class="text-gray-500">Cost per unit:</span>
              <span class="font-medium text-gray-900">$<%= number_with_precision(product.cost, precision: 2) %></span>
            </div>
            <div class="flex justify-between text-sm">
              <span class="text-gray-500">Selling price:</span>
              <span class="font-medium text-gray-900">$<%= number_with_precision(product.price, precision: 2) %></span>
            </div>
            <div class="flex justify-between text-sm">
              <span class="text-gray-500">Margin:</span>
              <span class="font-medium text-green-600"><%= product.margin %>%</span>
            </div>
            <div class="flex justify-between text-sm">
              <span class="text-gray-500">Profit per unit:</span>
              <span class="font-medium text-green-600">$<%= number_with_precision(product.profit_per_unit, precision: 2) %></span>
            </div>
          </div>
          <div class="pt-4 border-t border-gray-200">
            <div class="flex space-x-2">
              <%= link_to "View Details", product_path(product), class: button_classes(:outline, :small) %>
              <%= link_to "Add to Market", new_market_simulation_path(product_id: product.id), class: button_classes(:primary, :small) %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="<%= card_classes %>">
      <div class="text-center py-12">
        <div class="text-6xl mb-4">üõçÔ∏è</div>
        <h3 class="text-lg font-medium text-gray-900 mb-2">No products yet</h3>
        <p class="text-gray-600 mb-6">Create products from your recipes to simulate market performance.</p>
        <% if Recipe.any? %>
          <%= link_to "Create First Product", new_product_path, class: button_classes %>
        <% else %>
          <p class="text-gray-500 mb-4">You need to create recipes first before making products.</p>
          <%= link_to "Create Recipe First", new_recipe_path, class: button_classes %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
