<div class="px-4 sm:px-0">
  <div class="flex items-center justify-between mb-6">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Recipes</h1>
      <p class="text-gray-600 mt-2">Create and manage your recipe collection</p>
    </div>
    <%= link_to "Create New Recipe", new_recipe_path, class: button_classes %>
  </div>
  <% if @recipes.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @recipes.each do |recipe| %>
        <div class="<%= card_classes %> hover:shadow-md transition-shadow group">
          <div class="flex items-start justify-between mb-4">
            <h3 class="text-lg font-semibold text-gray-900 group-hover:text-indigo-600">
              <%= link_to recipe.name, recipe_path(recipe) %>
            </h3>
            <div class="flex space-x-1">
              <%= link_to edit_recipe_path(recipe), class: "text-gray-400 hover:text-indigo-600" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
              <% end %>
            </div>
          </div>
          <p class="text-gray-600 text-sm mb-4 line-clamp-3"><%= recipe.description %></p>
          <div class="flex items-center justify-between text-sm text-gray-500 mb-4">
            <span>🍽️ <%= recipe.servings %> servings</span>
            <span>⏱️ <%= recipe.preparation_time %> min</span>
          </div>
          <div class="flex items-center justify-between text-sm">
            <span class="text-gray-500"><%= recipe.ingredients.count %> ingredients</span>
            <span class="font-medium text-gray-900">$<%= number_with_precision(recipe.cost_per_serving, precision: 2) %>/serving</span>
          </div>
          <div class="mt-4 pt-4 border-t border-gray-200">
            <div class="flex space-x-2">
              <%= link_to "View Recipe", recipe_path(recipe), class: button_classes(:outline, :small) %>
              <%= link_to "Create Product", new_product_path(recipe_id: recipe.id), class: button_classes(:primary, :small) %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="<%= card_classes %>">
      <div class="text-center py-12">
        <div class="text-6xl mb-4">📖</div>
        <h3 class="text-lg font-medium text-gray-900 mb-2">No recipes yet</h3>
        <p class="text-gray-600 mb-6">Create your first recipe to get started with your culinary journey.</p>
        <%= link_to "Create First Recipe", new_recipe_path, class: button_classes %>
      </div>
    </div>
  <% end %>
</div>
