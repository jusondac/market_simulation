<div class="px-4 sm:px-0">
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-100">Jenis Bahan Baru</h1>
    <p class="text-gray-400 mt-2">Tambahkan jenis bahan baru</p>
  </div>
  <div class="<%= card_classes %>">
    <%= form_with model: @ingredient_type, local: true, class: "space-y-6" do |form| %>
      <% if @ingredient_type.errors.any? %>
        <div class="bg-red-900 border border-red-700 rounded-md p-4">
          <div class="text-red-300 text-sm">
            <h4 class="font-medium mb-2">Silakan perbaiki kesalahan berikut:</h4>
            <ul class="list-disc list-inside space-y-1">
              <% @ingredient_type.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>
      <div>
        <%= form.label :name, "Nama Jenis", class: label_classes %>
        <%= form.text_field :name, class: input_classes, placeholder: "contoh: kemasan, mentah, organik" %>
      </div>
      <div>
        <%= form.label :description, "Deskripsi", class: label_classes %>
        <%= form.text_area :description, rows: 3, class: textarea_classes, 
            placeholder: "Deskripsi singkat tentang jenis bahan ini..." %>
      </div>
      <div class="flex items-center justify-between pt-4 border-t border-gray-700">
        <%= link_to "Batal", ingredient_types_path, class: button_classes(:outline) %>
        <%= form.submit "Buat Jenis Bahan", class: button_classes %>
      </div>
    <% end %>
  </div>
</div>
